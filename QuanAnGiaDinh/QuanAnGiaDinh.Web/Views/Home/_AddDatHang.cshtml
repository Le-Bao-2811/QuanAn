@model QuanAnGiaDinh.Web.ViewModels.BanHangVM


<div class="row"  id="_AddDatHang">
	<div class="col-md-7">
		<form asp-action="_AddDatHang" id="form-dathang" data-ajax="true">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="form-control" />
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TenKH" class="control-label">Họ và Tên</label>
				<input asp-for="TenKH" class="form-control" />
				<span asp-validation-for="TenKH" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DiaChi" class="control-label">Địa Chỉ</label>
				<input asp-for="DiaChi" class="form-control" />
				<span asp-validation-for="DiaChi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MonAn" class="control-label">Món Ăn</label>
				<input asp-for="MonAn" value=" " class="form-control input-menu" />
				<span asp-validation-for="MonAn" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SDT" class="control-label">Số Điện Thoại</label>
				<input asp-for="SDT" class="form-control" />
				<span asp-validation-for="SDT" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sotien" class="control-label">Tổng tiền</label>
				<input asp-for="Sotien" value="0" class="form-control money-modal" />
				<span asp-validation-for="Sotien" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary dathang" />
			</div>
		</form>
	</div>
</div>

