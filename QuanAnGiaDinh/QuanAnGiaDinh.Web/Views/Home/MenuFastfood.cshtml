
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layoutclient.cshtml";
}

<div class="team">
	<div class="container">
		<div class="section-header text-center">
			<p>Our Team</p>
			<h2>Our Master Chef</h2>
		</div>
		<div class="row menu">
			@foreach (var item in Model)
			{
				<div class="col-lg-3 col-md-6">
					<div class="team-item">
						<div class="team-img">
							<img src="/img/menu/@item.duongdan" width="50" height="230" alt="Image">
							<div class="team-social">
								<a data-id="@item.Id" class="btn btn-danger add-cart"><i class="fas fa-shopping-cart"></i></a>

							</div>
						</div>
						<div class="team-text">
							<h2>@item.ThucDon</h2>
							<p>@item.GiaTien</p>
						</div>
					</div>
				</div>
			}
		</div>
		<partial name="_Pager"/>
	</div>
</div>
<partial name="Cart" />


@section java{
	<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
	<script src="~/Client/Cart.js" asp-append-version="true"></script>
}
<!-- Team End -->
