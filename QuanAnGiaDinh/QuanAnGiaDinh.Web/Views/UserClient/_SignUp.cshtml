@model QuanAnGiaDinh.Web.ViewModels.AddUserClientVM


<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<div class="row">
	<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
		<h1>Đăng kí tài khoản</h1>
		<div class="card card-signin my-5 rounded shadow p-3 mb-5 bg-white">
			<form asp-action="_SignUp" id="form-signup">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group pt-2">
					<label asp-for="UserName" class="control-label p-1"></label>
					<input asp-for="UserName" class="form-control" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
				<div class="form-group pt-2">
					<label asp-for="Password" class="control-label p-1"></label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-group pt-2">
					<label asp-for="ComfirmPassword" class="control-label p-1"></label>
					<input asp-for="ComfirmPassword" class="form-control" />
					<span asp-validation-for="ComfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-group pt-2">
					<label asp-for="FullName" class="control-label p-1"></label>
					<input asp-for="FullName" class="form-control" />
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
				<div class="form-group pt-2">
					<input type="submit" value="Create" class="btn btn-primary signup" />
				</div>
			</form>
		</div>
	</div>
</div>
<script src="~/jquery/jquery.js"></script>
<script src="~/lib/limonte-sweetalert2/sweetalert2.all.js"></script>
<script src="~/Client/AddUserClient.js" asp-append-version="true"></script>
