@model QuanAnGiaDinh.Web.Areas.Admin.ViewModels.TaiKhoan.LoginVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>

<div class="container">
	<div class="row">
		<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
			<div class="card card-signin my-5 rounded shadow p-3 mb-5 bg-white">
				<h1 class="text-center">Đăng Nhập</h1>
				<form asp-action="Login" autocomplete="off">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="UserName" class="control-label p-1" ></label>
						<input asp-for="UserName" class="form-control" />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password" class="control-label p-1"></label>
						<input type="password" asp-for="Password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label p-1"> Duy trì đăng nhập
							<input class="form-check-input" asp-for="Check" />
						</label>
					</div>
					<div class="form-group">
						<input type="submit" value="Đăng nhập" class="btn btn-primary" />
					</div>
				</form>
			</div>
			<a asp-action="_SignUp" asp-controller="UserClient" asp-area="" class="text-primary">Bạn chưa có tài khoản đăng ký ngay</a>
		</div>
	</div>
</div>


</body>
</html>
