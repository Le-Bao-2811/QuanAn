@model QuanAnGiaDinh.Web.Areas.Admin.ViewModels.Menu.MenuVM

<div class="row d-none" id="_AddorUpdate">
    <div class="col-md-7">
		<form asp-action="_AddorUpdate" method="post" asp-controller="Menu" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="form-control" readonly />
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>	
			<div class="form-group">
				<label asp-for="ThucDon" class="control-label"></label>
				<input asp-for="ThucDon" class="form-control" />
				<span asp-validation-for="ThucDon" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdDanhMuc" class="control-label"></label>
				<select asp-for="IdDanhMuc" class="form-control">
					<vc:danh-sach-danh-muc></vc:danh-sach-danh-muc>
				</select>
				<span asp-validation-for="IdDanhMuc" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdTheLoai" class="control-label"></label>
				<select asp-for="IdTheLoai" class="form-control">
					<vc:danh-sach-the-loai></vc:danh-sach-the-loai>
				</select>
				<span asp-validation-for="IdTheLoai" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Hinh" class="control-label"></label>
				<input asp-for="Hinh" type="file" class="form-control Hinh image" accept="*/*" />
				<span asp-validation-for="Hinh" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="GiaTien" class="control-label"></label>
				<input asp-for="GiaTien" class="form-control" />
				<span asp-validation-for="GiaTien" class="text-danger"></span>
			</div>
		</form>
    </div>
</div>


