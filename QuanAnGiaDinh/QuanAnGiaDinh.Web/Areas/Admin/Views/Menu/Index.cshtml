
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
	<div class="mt-4 mb-4">
		<button class="btn btn-primary js-add-or-update">Thêm dữ liệu</button>
		<a class="btn btn-success" asp-action="Index" asp-controller="DanhMucMenu" >Danh Mục</a>
		<a class="btn btn-success" asp-action="Index" asp-controller="TheLoaiMenu">Thể loại</a>
	</div>
	<div>
		<h1>Danh sách món ăn</h1>
		<table id="tbMenu" class="table table-hover table-bordered w-100">
			<thead>
				<tr>
					<th>Id</th>
					<th>Thực đơn</th>
					<th>Danh mục</th>
					<th>Thể loại</th>
					<th>Giá tiền</th>
					<th class="fit"></th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th>Id</th>
					<th>Tên thực phẩm</th>
					<th>Trạng thái</th>
					<th>Số lượng</th>
					<th>Danh mục</th>
					<th></th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
<partial name="_AddorUpdate" />
<div class="d-none js-placeholder">
	<div class="btn-group" role="group">
		<a href="#" class="btn btn-sm btn-outline-secondary">
			<i class="fa fa-fw fa-eye"></i>
		</a>
		<a href="#" class="btn btn-sm btn-outline-secondary js-add-or-update">
			<i class="fa fa-fw fa-edit"></i>
		</a>
		<a href="#" class="btn btn-sm btn-outline-secondary js-delete">
			<i class="fa fa-fw fa-trash"></i>
		</a>
	</div>
</div>
@section script
{
	<script src="~/Admin/Menu/JavaScript.js" asp-append-version="true"></script>
}

