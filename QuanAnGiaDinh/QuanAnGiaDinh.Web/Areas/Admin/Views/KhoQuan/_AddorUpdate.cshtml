@model QuanAnGiaDinh.DTOs.KhoQuan


<div class="row d-none" id="_AddorUpdate">
    <div class="col-md-4">
        <form asp-action="_AddorUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="form-control" readonly/>
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="Thucpham" class="control-label"></label>
                <input asp-for="Thucpham" class="form-control" />
                <span asp-validation-for="Thucpham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTrangThai" class="control-label"></label>
                <select asp-for="IdTrangThai"  class="form-control">
                    <vc:danh-sach-trang-thai />
                </select>
                <span asp-validation-for="IdTrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soluong" class="control-label"></label>
                <input asp-for="Soluong" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MahangId" class="control-label"></label>
                <select asp-for="MahangId" class="form-control" >
                    <vc:danh-sach-ma-hang />
                </select>
                <span asp-validation-for="MahangId" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>



