            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThoiGianDatHang)
            </th>
            <th>
